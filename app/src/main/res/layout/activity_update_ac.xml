<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgcolor"
    tools:context=".Teacher_Section.Upload_Ac.UpdateAcActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="362dp"
        android:layout_height="470dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="135dp"
            android:textSize="25dp"
            android:layout_gravity="left"
            android:textStyle="bold|italic"
            android:text="Student Name" />
        <TextView
            android:id="@+id/rollno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll No"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Branch"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="120dp"
            />
        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textColor="@color/teal_700"
            android:layout_marginLeft="5dp"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="139dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/profile" />
        <TextView
            android:id="@+id/addon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-33dp"
            android:layout_marginLeft="130dp"
            android:text="+3"
            android:textSize="18dp"
            android:textColor="@color/teal_700"
            android:visibility="invisible"
          />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-10dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/totalattendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Total Attendance"
                android:textSize="18dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="-10dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/totalclasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Total Classes"
                android:textSize="18dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="75dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/presentac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:layout_marginBottom="7dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present AC"
                android:textSize="15dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="+"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="59dp"
            android:layout_marginRight="40dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:orientation="vertical">
            <EditText
                android:id="@+id/addac"
                android:layout_width="30dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:hint="0"
                android:maxLength="1"
                android:inputType="number"
                android:textColor="@color/teal_700"
                android:textSize="20dp"
                android:layout_marginBottom="0dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Ac"
                android:textSize="17dp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="="
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="59dp"
            android:layout_marginLeft="55dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="74dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/totalac"
                android:layout_width="30dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/purple_700"
                android:textSize="20dp"
                android:layout_marginBottom="7dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Total Ac"
                android:textSize="17dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                />
        </LinearLayout>
        <Button
            android:id="@+id/updatenbtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Update Ac"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center|bottom"
            android:textColor="@color/white"
            android:background="@drawable/customcolor2"
            />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>